{
  "name": "ts-react-app",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "parcel ./public/dev/index.html --open",
    "build":
      "parcel build ./src/index.tsx --out-dir build/ && cp ./public/prod/index.html ./build/index.html",
    "serve:build": "serve --open ./build/",
    "test": "jest --watch --coverage"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "comment-json": "^1.1.3",
    "jest": "^22.3.0",
    "parcel-bundler": "^1.6.1",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "serve": "^6.4.10",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": ["**/__tests__/*.(ts|tsx|js)"]
  }
}
