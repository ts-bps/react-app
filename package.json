{
  "name": "ts-react-app",
  "version": "0.1.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "parcel ./public/dev/index.html --open",
    "build":
      "parcel build ./src/index.tsx --out-dir build/ && cp ./public/prod/index.html ./build/index.html",
    "serve:build": "serve --open ./build/",
    "test": "jest --watch --coverage"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "comment-json": "^1.1.3",
    "jest": "^22.4.3",
    "parcel-bundler": "^1.7.1",
    "prettier": "^1.12.1",
    "react-test-renderer": "^16.3.2",
    "serve": "latest",
    "typescript": "^2.8.3"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": ["**/__tests__/*.(ts|tsx|js)"]
  }
}
